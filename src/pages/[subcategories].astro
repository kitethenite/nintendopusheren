<MainLayout>
  <h1>{subName.name}</h1>
  <section class="items">
    {
      items
        .filter((item) => item.subcategory_id === subName.id)
        .map((item) => {
          return (
            <div>
              
              <a href={`/${subName.slug}/${item.slug}`}>
                <SubItem item={item}/>
                {item.name}
              </a>
            </div>
          );
        })
    }
  </section>
</MainLayout>


