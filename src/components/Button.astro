---
const { tekst } = Astro.props;
---

<div class="container">
  <button>
    <a href="#">{tekst}</a>
    <img class="knap" src="images/button.svg" alt="" />
    <img class="knap_mobile" src="images/button_mobile.svg" alt="" />
  </button>
</div>

<style>
  button {
    background-color: transparent;
    border: none;
    display: grid;
    grid-template-columns: 1fr;
    place-items: center;
  }
  img {
    grid-area: 1/1;
  }

  a {
    color: var(--accent-color);
    grid-area: 1/1;
    text-decoration: none;
    font-family: var(--font-family-tertiary);
    font-size: var(--font-size-lg);
  }
  img:hover {
    filter: brightness(0) saturate(100%) invert(30%) sepia(7%) saturate(1494%)
      hue-rotate(161deg) brightness(91%) contrast(93%);
    z-index: 1;
  }
  a:hover {
    color: var(--primary-color);
    z-index: 2;
  }
  @media only screen and (min-width: 768px) {
    .knap_mobile {
      display: none;
    }
  }
  @media only screen and (max-width: 768px) {
    .knap {
      display: none;
    }

    .knap_mobile {
      width: 120px;
    }

    a {
      color: var(--primary-color);
      font-size: 24px;
    }

    .container {
      display: flex;
      align-items: center;
      flex-direction: row;
    }
  }
</style>
