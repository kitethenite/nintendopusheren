---
import Button from "./Button.astro";
---

<div class="container">
  <img class="knap" src="images/index-header-1440x544.webp" alt="" />
  <div class="knapper">
    <Button tekst="Om os" />
    <Button tekst="Events" />
  </div>
</div>
<style>
  @media only screen and (min-width: 768px) {
    .container {
      display: grid;
      place-items: center;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
      padding-bottom: 100px;
    }

    img {
      width: 100%;
      height: auto;
      grid-column: 1;
      grid-row: 1/3;
    }

    .knapper {
      grid-row: 2/3;
      grid-column: 1;
      display: flex;
      flex-direction: row;
      column-gap: 200px;
    }
  }

  @media only screen and (max-width: 768px) {
    img {
      width: 100%;
      height: auto;
    }
    .knapper {
      margin-top: 70px;
      margin-bottom: 70px;
      display: flex;
      flex-direction: row;
      column-gap: 60px;
      justify-content: center;
    }
  }
</style>
