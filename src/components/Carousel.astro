<style>
  .slider_container {
    margin: 2vw 0 2vw 0;
    display: flex;
    align-items:center;
    justify-content: center;
    min-height: 50vh;
    border-top: 2px solid var(--accent-color);
    border-bottom: 2px solid var(--accent-color);
  }
